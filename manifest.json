{
    "manifest_version": 2,
    "name": "Relevant News Finder",
    "description": "Find relevant news to article you're reading",
    "version": "1.0",
  
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action":{
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions":[
        "tabs",
        "http://127.0.0.1/*",
        "<all_urls>"
    ]
}
